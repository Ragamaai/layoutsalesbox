<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/addaccountlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel"
        android:text="Cancel"
        android:textSize="15sp"
        android:textColor="#fff"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/manually"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/addaccountlayout"
        android:background="@drawable/drawable_rectangle_box"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_marginLeft="120dp"
        android:text="Manually" />

    <TextView
        android:id="@+id/bysearch"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/addaccountlayout"
        android:layout_toRightOf="@+id/manually"
        android:background="@drawable/drawable_rectangle_box"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="By Search" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="Done"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/bysearch"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addaccountlayout">
        <RelativeLayout
            android:id="@+id/importrelative_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
    <ImageView
        android:id="@+id/addaccountimage"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/add_account_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addaccountlayout"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/addaccountimage"
        android:text="Account Photo"
        android:textColor="#000" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/addaccountimage"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#c4c4c4">
    </View>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Name:"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/name"
        android:background="@android:color/transparent"
        android:hint="required"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/nameview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#c4c4c4"></EditText>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameview"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Phone:"
        android:textSize="15sp" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/addbtn_image"
                android:layout_below="@+id/nameview"
                android:layout_alignParentRight="true"
                android:src="@drawable/iconaddcontact"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/phoneview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/phone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#c4c4c4"></EditText>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneview"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Email:"
        android:textSize="15sp" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/addbtn_image2"
                android:layout_below="@+id/phoneview"
                android:layout_alignParentRight="true"
                android:src="@drawable/iconaddcontact"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/emailview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/email"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#c4c4c4"></EditText>

    <TextView
        android:id="@+id/street"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailview"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Street:"

        android:textSize="15sp" />

    <EditText
        android:id="@+id/streetview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/street"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#c4c4c4"></EditText>

    <TextView
        android:id="@+id/zipcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/streetview"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Zip Code:"

        android:textSize="15sp" />

    <EditText
        android:id="@+id/codeview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/zipcode"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#c4c4c4"></EditText>

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codeview"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="City:"

        android:textSize="15sp" />

    <EditText
        android:id="@+id/cityview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/city"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#c4c4c4"></EditText>

    <TextView
        android:id="@+id/regionstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityview"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Region/State:"

        android:textSize="15sp" />

    <EditText
        android:id="@+id/regionstateview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/regionstate"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#c4c4c4"></EditText>

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regionstateview"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Country:"

        android:textSize="15sp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/regionstateview"
        android:layout_marginRight="10dp">

    </Spinner>

    <View
        android:id="@+id/countryview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/country"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#c4c4c4"></View>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countryview"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Type:"
        android:textSize="15sp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/countryview"
        android:layout_marginRight="10dp">

    </Spinner>

    <View
        android:id="@+id/typeview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/type"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#c4c4c4"></View>

    <TextView
        android:id="@+id/industry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeview"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Industry:"
        android:textSize="15sp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/typeview"
        android:layout_marginRight="10dp">

    </Spinner>


    <View
        android:id="@+id/industryview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/industry"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#c4c4c4"></View>

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/industryview"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Size:"
        android:textSize="15sp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/industryview"
        android:layout_marginRight="10dp">

    </Spinner>


    <View
        android:id="@+id/sizeview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/size"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#c4c4c4"></View>

    <TextView
        android:id="@+id/web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sizeview"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Web:"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/web"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#c4c4c4"></EditText>

    <Button
        android:id="@+id/cancel_action"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/addaccountimage"
        android:layout_below="@+id/webview"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:text="Cancel"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/webview"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/cancel_action"
        android:background="@color/colorPrimary"
        android:text="Done"
        android:textAllCaps="false" />
</RelativeLayout>
        </ScrollView>
    </RelativeLayout>