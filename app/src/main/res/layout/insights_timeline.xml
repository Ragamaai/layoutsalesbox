<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
    android:id="@+id/timeline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Timeline"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="5dp"
    android:textSize="15sp"/>

    <View
        android:id="@+id/timelineview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/timeline"
        android:layout_marginTop="5dp"
        android:background="#c4c4c4">
    </View>
    <ListView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/timelineview">
    </ListView>
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorPrimary"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:id="@+id/first_item_bottom_bar"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/r1">

                <ImageView
                    android:id="@+id/bottom_first_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:src="@drawable/fav"
                    android:backgroundTint="#4328ab"/>


            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:id="@+id/second_item_bottom_bar"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/r2">

                <ImageView
                    android:id="@+id/bottom_second_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:src="@drawable/recents" />


            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:id="@+id/third_item_bottom_bar"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/r3">
                <ImageView
                    android:id="@+id/bottom_third_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:src="@drawable/alpha" />


            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:id="@+id/fourth_item_bottom_bar"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/r4">
                <ImageView
                    android:id="@+id/bottom_fourth_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="15dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/listview" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>