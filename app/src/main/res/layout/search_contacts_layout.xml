<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_contacts_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2">

        <ImageView
            android:id="@+id/image_running"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/running_dark" />

        <ImageView
            android:id="@+id/image_addbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/image_running"
            android:padding="5dp"
            android:src="@drawable/add_bar" />

        <ImageView
            android:id="@+id/icon_navigation_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/rl_searchview_task"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:padding="7dp"
            android:src="@drawable/menubar_dark" />

        <com.example.ramsraga.salesbox.utils.TextViewSemiBold
            android:id="@+id/txt_contacts_lead_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_running"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Contacts"
            android:textColor="#000"
            android:textSize="20sp" />

        <com.example.ramsraga.salesbox.utils.TextViewRegular
            android:id="@+id/txt_contacts_heading_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_contacts_lead_heading"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Karthik Testing"
            android:textColor="#c3c3c3"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_below="@+id/txt_contacts_heading_name"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/search"
            android:src="@drawable/search_icon" />

        <com.example.ramsraga.salesbox.utils.TextViewSemiBold
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_contacts_heading_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:text="Search contacts"
            android:textColor="#d4d4d4"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_contacts_header"
        android:layout_marginTop="5dp">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/accounts_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:src="@drawable/icon_contacts"
            app:civ_border_color="#ffc20a"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/accounts_image"
            android:text="Name"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profileimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/user" />

        <ImageView

            android:id="@+id/img_profile"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_below="@+id/name"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/name"
            android:src="@drawable/account_icon_contact_in_progress" />

        <TextView
            android:id="@+id/imgprofilenmbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/img_profile"
            android:text="0"
            android:textColor="#000" />

        <ImageView

            android:id="@+id/img_check"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_below="@+id/name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/img_profile"
            android:src="@drawable/check_icon_bar_task" />

        <TextView
            android:id="@+id/checknmbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/img_check"
            android:text="0"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/img_calendar"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_below="@+id/name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/img_check"
            android:src="@drawable/icon_meetings" />

        <TextView
            android:id="@+id/calnmbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/img_calendar"
            android:text="0"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/img_moneybag"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_below="@+id/name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/img_calendar"
            android:src="@drawable/icon_budget" />

        <TextView
            android:id="@+id/moneynmbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/img_moneybag"
            android:text="0"
            android:textColor="#000" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/moneynmbr"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="#c4c4c4">

        </View>

        <TextView
            android:id="@+id/closedsales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Closed sales" />

        <TextView
            android:id="@+id/closedsalesnmbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/closedsales"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:text="0"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/closedprofit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/closedsales"
            android:text="Closed profit" />

        <TextView
            android:id="@+id/closedprofitnmbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/closedprofit"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/closedsalesnmbr"
            android:text="0"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/closedprofit"
            android:text="Value" />

        <TextView
            android:id="@+id/valuenmbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/value"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/closedprofitnmbr"
            android:text="0"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/value"
            android:text="Weighted" />

        <TextView
            android:id="@+id/weightnmbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/value"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/valuenmbr"
            android:text="0"
            android:textColor="#000"
            android:textStyle="bold" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:backgroundTint="@color/colorPrimary"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/first_item_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20">

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/bottom_first_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/icon_tab_favorite" />

                <TextView
                    android:id="@+id/favourites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bottom_first_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="8dp"
                    android:text="Favourites"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_item_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20">

            <RelativeLayout
                android:id="@+id/r2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/bottom_second_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/icon_tab_recent" />

                <TextView
                    android:id="@+id/recents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bottom_second_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="8dp"
                    android:text="Recents"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_item_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20">

            <RelativeLayout
                android:id="@+id/r3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/bottom_third_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/icon_tab_contact" />

                <TextView
                    android:id="@+id/alphabeticalprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bottom_third_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="8dp"
                    android:text="Alphabetical"
                    android:textColor="#fff"
                    android:textSize="12dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourth_item_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20">

            <RelativeLayout
                android:id="@+id/r4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/bottom_fourth_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/icon_tab_detail" />

                <TextView
                    android:id="@+id/details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bottom_fourth_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="8dp"
                    android:text="Details"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>