<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ImageView
    android:id="@+id/appointmentsimage"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:src="@drawable/accountsicon"/>

<TextView
    android:id="@+id/name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_toRightOf="@+id/appointmentsimage"
    android:text="abc"
    android:layout_marginTop="10dp"/>
<ImageView
    android:id="@+id/leadsimage"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_below="@+id/name"
    android:layout_toRightOf="@+id/appointmentsimage"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:src="@drawable/icon_leads"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/date"
    android:text="Jul 14,2016,"
    android:layout_toRightOf="@+id/leadsimage"
    android:layout_below="@+id/name"
    android:layout_marginTop="7dp"
    android:layout_marginLeft="5dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/time"
    android:text="12:00 PM"
    android:layout_toRightOf="@id/date"
    android:layout_below="@+id/name"
    android:layout_marginTop="7dp"/>
<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:id="@+id/profileimage"
    android:layout_alignParentRight="true"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:src="@drawable/icon_tab_contact"/>
</RelativeLayout>